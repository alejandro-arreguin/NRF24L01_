#include <SPI.h>
#include <nRF24L01.h>
#include <RF24.h>

RF24 radio(7,8); //CE,CSN pins

const byte address[6] = "00001"; //pipe address

void setup() {
  radio.begin();
  radio.openWritingPipe(address); //opens pipe
  radio.setPALevel(RF24_PA_MAX); //sets power level for module
  radio.stopListening(); //sets the module as a transmitter
}

void loop() {
  const char text[] = "Hello World";
  radio.write(&text, sizeof(text)); //sends our text to the reciever every 1 second
  delay(1000);
}
